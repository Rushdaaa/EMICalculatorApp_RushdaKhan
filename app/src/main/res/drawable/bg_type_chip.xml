<!--
    Background drawable for the expense type (daily, recurring, monthly) chips used in the expenses list.
    It defines a rectangular shape with a light gray background and rounded corners.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#E0E0E0" /> <!-- Sets the solid fill color of the shape to light gray -->
    <corners android:radius="8dp" /> <!-- Rounds the corners of the rectangle -->
</shape>
