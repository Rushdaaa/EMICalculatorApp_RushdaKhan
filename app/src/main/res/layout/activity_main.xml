<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleMarginTop="20dp"
        app:title="@string/personal_finance_manager"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white" />

    <!-- ScrollView allows the content to be scrollable if it exceeds the screen height.
         This is essential for supporting various screen sizes and orientations. -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===== EMI BLOCK ===== -->
            <!-- This section is for calculating Equated Monthly Installment (EMI).
                 It includes input fields for loan amount, interest rate, and tenure, along with options for payment frequency. -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emi_calculator"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp" />


            <!-- Input field for loan amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loan_amount"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_loan_amount"
                android:inputType="numberDecimal"
                android:layout_marginBottom="12dp" />

            <!-- Input field for annual interest rate -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/annual_interest_rate"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_interest_rate"
                android:inputType="numberDecimal"
                android:layout_marginBottom="12dp" />

            <!-- Input field for tenure in years -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tenure_years"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTenure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_tenure_value"
                android:inputType="number"
                android:layout_marginBottom="12dp" />

            <!-- Radio buttons for selecting payment frequency (Monthly, Bi-Weekly, Weekly) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_frequency"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <RadioButton
                    android:id="@+id/rbMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/monthly" />

                <RadioButton
                    android:id="@+id/rbBiWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/bi_weekly" />

                <RadioButton
                    android:id="@+id/rbWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/weekly" />
            </RadioGroup>

            <!-- Buttons for calculating EMI and resetting the fields -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/btnCalculate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_calculate_emi" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_reset" />
            </LinearLayout>

            <!-- Display area for the calculated EMI value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3E5F5"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="16dp">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_emi"
                    android:layout_marginBottom="-12dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- Value -->
                <TextView
                    android:id="@+id/tvEmiValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emi_placeholder"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- ===== INCOME BLOCK ===== -->
            <!-- This section allows users to input and save their monthly income.
                 The saved income is used for budget calculations. -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monthly_income"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20sp" />

            <!-- Input field for monthly income -->
            <EditText
                android:id="@+id/etIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/enter_your_monthly_income"
                android:inputType="numberDecimal"
                android:minHeight="48dp" />

            <!-- Buttons to save or edit the entered income -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnSaveIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:text="@string/save" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnEditIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"
                    android:text="@string/edit" />
            </LinearLayout>

            <!-- Display area for the saved monthly income -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8F5E9"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="36dp">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly_income"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Value -->
                <TextView
                    android:id="@+id/tvIncomeSaved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emi_placeholder"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>


            <!-- ===== EXPENSES BLOCK ===== -->
            <!-- This section is for managing monthly expenses.
                 Users can add multiple expenses, and the total is displayed. -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monthly_expenses"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="20sp" />

            <!-- Container for listing expenses. It has its own scrollbar to manage a potentially long list of expenses.
                 Each expense item will be dynamically added here. -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="#EEEEEE"
                android:elevation="4dp"
                android:padding="8dp"
                android:layout_marginTop="8dp">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:id="@+id/expensesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

            <!-- Button to add a new expense item -->
            <Button
                android:id="@+id/btnAddExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_expense"
                android:backgroundTint="#E57373"
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

            <!-- Display area for the total monthly expenses -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEBEE"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tvExpensesTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_monthly_expenses"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- ===== BUDGET BLOCK ===== -->
            <!-- This section displays the overall budget balance, calculated as Income - EMI - Expenses.
                 It gives a quick overview of the user's financial health. -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/budget_balance"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="8dp" />

            <!-- Display area for the calculated budget balance (monthly savings) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E3F2FD"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/tvBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly_savings_0_00"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
