<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a single expense item in a list.
     This defines the visual structure for displaying an expense's name, type, amount, and a delete button. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_expense_item"
    android:padding="12dp"
    android:layout_marginVertical="6dp">

    <!-- Displays the name of the expense. Aligned to the start of the parent. -->
    <TextView
        android:id="@+id/tvExpenseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense_name"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Displays the type of the expense (e.g., "Monthly", "One-Time") as a chip/tag.
         Positioned to the right of the expense name. -->
    <TextView
        android:id="@+id/tvExpenseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="@string/monthly"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@drawable/bg_type_chip"
        app:layout_constraintStart_toEndOf="@id/tvExpenseName"
        app:layout_constraintTop_toTopOf="@id/tvExpenseName"
        app:layout_constraintBottom_toBottomOf="@id/tvExpenseName"
        android:layout_marginStart="8dp" />

    <!-- Displays the monetary amount of the expense.
         Positioned to the left of the delete button. -->
    <TextView
        android:id="@+id/tvExpenseAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- A button, represented by a trashcan icon, to delete the expense item.
         Aligned to the end of the parent. -->
    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@android:color/holo_red_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>
