<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/red_dark"
        app:title="@string/add_new_expense"
        app:titleMarginTop="20dp"
        app:titleTextColor="@android:color/white"
        app:titleCentered="true" />

    <!-- Scrollable Content Area -->
    <!-- This ScrollView allows the content within it to be scrollable if it exceeds the screen height. -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Input field for the name of the expense. -->
            <EditText
                android:id="@+id/etExpenseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/expense_name"
                android:layout_marginBottom="12dp"
                android:importantForAutofill="no"
                android:inputType="textCapWords"
                tools:ignore="LabelFor" />

            <!-- Input field for the amount of the expense. -->
            <EditText
                android:id="@+id/etExpenseAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="@string/amount"
                android:layout_marginBottom="12dp"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <!-- Input field for the number of times a recurring expense occurs. -->
            <!-- This field is hidden by default and only shown when 'Recurring' type is selected. -->
            <EditText
                android:id="@+id/etTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/of_times"
                android:inputType="number"
                android:visibility="gone"
                android:layout_marginBottom="12dp"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <!-- Toggle button group to select the type of expense (Monthly, Daily, Recurring). -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="true">

                <!-- Button to select 'Monthly' expense type. Checked by default. -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMonthly"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/monthly"
                    android:checked="true" />

                <!-- Button to select 'Daily' expense type. -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDaily"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/daily" />

                <!-- Button to select 'Recurring' expense type. -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecurring"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/recurring" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Button Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="20dp">

                <!-- Button to cancel the action of adding an expense. -->
                <Button
                    android:id="@+id/btnCancelExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:backgroundTint="#E57373"/>

                <!-- Button to save the new expense. -->
                <Button
                    android:id="@+id/btnSaveExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:layout_marginStart="12dp"
                    android:backgroundTint="#E57373"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
